@{
    Layout = "_Layout";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
    
}

<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite aqui sua senha">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="senha">E-mail</label>
        <input type="text" name="senha" value="" class="form-control" id="senha" placeholder="Digite aqui sua senha">
        @Html.ValidationMessage("senha")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>


